<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:pancakeview="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
             x:Class="DreamProperties.Modules.Login.LoginView">
    <ContentPage.Content>
        <Grid RowDefinitions="1*,2*,3*" Padding="0,20,0,0" >
            <Image Grid.Row="0"
                   Source="logo.png"
                   Aspect="AspectFit"
                   HeightRequest="100"
                   Margin="0,10,0,0"
                   />

            <Image Grid.Row="1"
                   Source="properties.png"
                   HeightRequest="300"
                   Margin="0,-30,0,0"
                   />

            <Grid Grid.Row="2">
                <pancakeview:PancakeView Grid.Row="0"
                           CornerRadius="60,60,0,0"
                           HeightRequest="500"
                           VerticalOptions="Fill"
                           Margin="0,0,0,0"
                           BackgroundColor="#496BA4"
                />
                <StackLayout Padding="30,0,30,0"
                             VerticalOptions="CenterAndExpand"
                             Spacing="14" >
                    <Label Text="Login!" 
                           HorizontalOptions="Center"
                           TextColor="White"
                           FontSize="Medium"
                           Padding="0,0,0,10"
                           />
                    <Button Text="Google"
                            FontFamily="AppRegular"
                            BackgroundColor="#B44247"
                            TextColor="White"
                            CornerRadius="10"
                            BorderColor="#FC4848"
                            BorderWidth="2"/>

                    <Button Text="Facebook"
                            FontFamily="AppRegular"
                            BackgroundColor="#325785"
                            TextColor="White"
                            CornerRadius="10"
                            BorderColor="#3372C1"
                            BorderWidth="2"/>

                    <Button Text="Apple"
                            FontFamily="AppRegular"
                            BackgroundColor="White"
                            TextColor="Black"
                            CornerRadius="10"
                            BorderColor="#4B4B4A"
                            BorderWidth="2"/>

                    <Button Text="New to Dream Properties? Register Now"
                            FontFamily="AppRegular"
                            TextColor="White"
                            BackgroundColor="Transparent"
                            />
                </StackLayout>
            </Grid>
        </Grid>
    </ContentPage.Content>
</ContentPage>